<GridPane alignment="CENTER" hgap="10" prefHeight="400" prefWidth="600" vgap="10" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.neuefische.mucjava231javafxstudents.controller.CreateAccountViewController">
    <Label text="Nutzername:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
    <TextField fx:id="userNameTextField" GridPane.columnIndex="1" GridPane.rowIndex="1" />

    <Label text="Passwort:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
    <PasswordField fx:id="passwordField" GridPane.columnIndex="1" GridPane.rowIndex="2" />

    <Button onAction="#createNewAccount" prefHeight="25.0" prefWidth="160.0" text="Registrieren" GridPane.columnIndex="1" GridPane.columnSpan="2" GridPane.hgrow="ALWAYS" GridPane.rowIndex="3" />

    <Separator orientation="HORIZONTAL" prefHeight="3.0" prefWidth="166.0" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="4" />

    <Label prefHeight="17.0" prefWidth="147.0" text="Bereits registriert?" textAlignment="CENTER" GridPane.columnSpan="2" GridPane.rowIndex="5" />

    <Button onAction="#switchToLoginView" prefHeight="25.0" prefWidth="160.0" text="Zum Login" GridPane.columnIndex="1" GridPane.columnSpan="2" GridPane.rowIndex="5" />
   <Label text="Email:" />
   <TextField fx:id="emailTextField" GridPane.columnIndex="1" />
   <Label fx:id="errorMessageLabel" prefHeight="17.0" prefWidth="148.0" GridPane.rowIndex="6" textFill="#ff5a5a" />
   <columnConstraints>
      <ColumnConstraints maxWidth="160.0" minWidth="74.0" prefWidth="147.0" />
      <ColumnConstraints maxWidth="168.0" minWidth="71.0" prefWidth="163.0" />
      <ColumnConstraints maxWidth="100.0" minWidth="0.0" prefWidth="0.0" />
      <ColumnConstraints maxWidth="100.0" minWidth="0.0" prefWidth="0.0" />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints minHeight="10.0" prefHeight="30.0" />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints minHeight="10.0" prefHeight="30.0" />
      <RowConstraints />
   </rowConstraints>
